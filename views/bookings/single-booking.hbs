{{#if customerLoggedIn}}
  <div class="single-booking-wrapper">
    <div class="single-booking-header">
      <h4>
        Här kan du se detaljerna kring din bokning.
      </h4>
      <p>Om det är något som inte stämmer så kan du avboka och
        <a href="/boka-stadning">boka på nytt.</a></p>
    </div>

    <div class="single-booking-container">
      <p><span>Datum för städning:</span> {{formatDate booking.date}}</p>
      <p><span>Bokad av:</span> {{booking.firstName}} {{lbooking.astName}}</p>
      <p><span>Adress för städning:</span>
        {{booking.streetName}},
        {{booking.postalCode}}
        {{booking.city}}</p>
      <p><span>Typ av städning:</span> {{booking.cleaningOption}}</p>
      <p><span>Ditt meddelande:</span>
        {{#if booking.message}} {{booking.message}} {{else}}
          Inga önskemål
        {{/if}}</p>
      <p><span>Status: </span>{{booking.status}}</p>

    </div>
    <form action="/din-bokning/{{booking._id}}/avboka" method="post">
      <input type="submit" value="Avboka" />
    </form>
  </div>
{{/if}}

{{#if adminLoggedIn}}
  <div class="single-booking-wrapper">
    <div class="single-booking-header">
      <h4>
        Här kan du se detaljerna kring din bokning.
      </h4>
      <p>Om det är något som inte stämmer så kan du avboka och
        <a href="/boka-stadning">boka på nytt.</a></p>
    </div>
    <div class="single-booking-container">

      <p>Kundens bokningsdetaljer</p>

      <p>Datum för städning: {{booking.date}}</p>
      <p>Bokad av: {{booking.firstName}} {{booking.lastName}}</p>
      <p>Adress för städning:
        {{booking.streetName}},
        {{booking.postalCode}}
        {{booking.city}}</p>
      <p>Typ av städning: {{booking.cleaningOption}}</p>

      {{#if customerLoggedIn}}
        <p>Ditt meddelande: {{booking.message}}</p>
      {{else}}
        {{#if adminLoggedIn}}
          <p>Kundens meddelande: {{booking.message}}</p>
        {{/if}}
      {{/if}}

      <p>Status: {{booking.status}}</p>
    </div>
    <form
      action="/kundbokning/{{booking._id}}/tilldela-stadare"
      method="post"
      class="assign-cleaner"
    >
      <label for="selectCleaner">Välj en städare:</label>
      <select name="assignedTo" id="selectCleaner">
        {{#each cleaners}}
          <option value="{{_id}}">{{firstName}}</option>
        {{/each}}
        <input type="submit" value="Tilldela städning" class="submit-btn" />
      </select>

    </form>
  </div>
{{else}}

  {{#if cancelBooking}}
    <form action="/din-bokning/{{booking._id}}/avboka" method="post">
      <input type="submit" value="Avboka" />
    </form>

  {{/if}}{{/if}}

