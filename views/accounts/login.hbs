<h2>LOGIN INFORMATION</h2>
{{#if customerLoggedIn}}
  <p>LOGGED IN AS {{firstName}}</p>
  <form action="/log-out" method="post">
    <input type="submit" value="LOG OUT" />
  </form>
{{else}}
  <p>NOT LOGGED IN</p>
{{/if}}

{{#if cleanerLoggedIn}}
  <p>STÄDARE</p>
{{/if}}

<div class="logo-container">
  <a href="/"><img src="/assets/Loga.png" alt="stada fint logo" /></a>
</div>

<div class="login-wrapper">
  <div class="login-container">
    <h2>Logga in</h2>
    <form
      {{#if customer}}
        action="/logga-in"
      {{/if}}
      {{#if cleaner}}
        action="/logga-in-stadare"
      {{/if}}
      method="post"
    >
      <input
        type="text"
        name="email"
        placeholder="📧 E-post {{emailWrongFormat}}"
      />
      <input type="password" name="password" placeholder="🔒 Lösenord " />
      <p class="error">{{loginError}}</p>
      <input type="submit" value="Logga in" class="submit-btn" />
    </form>
    <p>Inte registrerad ännu? 😫
      <a href="/registrera-konto">Klicka här för att bli ny kund! 😍
      </a>
    </p>
  </div>
</div>